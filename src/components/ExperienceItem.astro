---
export interface Props {
  title: string;
  description: string;
  date: string;
  link?: string;
}

const { title, description, date, link } = Astro.props;
---

<div class="absolute w-3 h-3 bg-white rounded-full mt-4 -start-1.5"></div>
<h3 class="text-lg font-semibold text-[#f5c814] mt-2">{title}</h3>
<time class="mb-1 text-sm font-semibold leading-none text-sky-300/80"
  >{date}</time
>
<p class="mb-4 text-base font-normal text-[#eeeff1] text-pretty">
  {description}
</p>
{
  link && (
    <a
      href={link}
      target="_blank"
      class="rounded-full border border-white/10 bg-white/5 hover:scale-110 hover:bg-white/10 transition  inline-flex items-center px-4 py-2 text-sm font-medium text-white focus:outline-none dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
    >
      See more{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
