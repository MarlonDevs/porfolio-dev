---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import Aboutme from "../components/Aboutme.astro";
import Badge from "../components/Badge.astro";
import Projects from "../components/Projects.astro";
import Experience from "../components/Experience.astro";
import SocialList from "../components/SocialList.astro";
import SectionContainer from "../components/SectionContainer.astro";

import CV from "../icons/CV.astro";
import ExperienceIcon from "../icons/ExperienceIcon.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import ProjectIcon from "../icons/ProjectIcon.astro";
import User from "../icons/User.astro";
---

<Layout
  title="Mardev Portfolio - WebDeveloper."
  description="Comprometido con el desarrollo de sitios web y aplicaciones web de alta calidad que satisfagan las necesidades de sus clientes. Contrata a mardev y crea tus proyectos web hoy mismo."
>
  <Header/>
  <main>
    <!--Home/ Section Hero -->
    <SectionContainer>
      
      <h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
        ðŸ‘‹ Hey, I'm Marlon <a
          href="https://www.linkedin.com"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Available to work</Badge>
        </a>
      </h1>

      <h2 class="text-2xl text-white">
        +1 years of experience. <span class="text-yellow-200/90"
          >Computer technician, Web Developer and Systems Engineering Student.</span
        >
        <span class="text-sky-300/80">From Zulia, Venezuela.</span><span
          class="text-red-300/90"
        >
          Able to make unique Apps.</span
        >
      </h2>

      <nav class="flex gap-x-4 mt-4">
        <SocialList href="https://www.linkedin.com">
          <LinkedInIcon class="size-4" />
          LinkedIn
        </SocialList>
        <SocialList href="https://www.github.com">
          <GithubIcon class="size-4" />
          Github
        </SocialList>
        <SocialList href="https://www.mail.com">
          <MailIcon class="size-4" />
          contactame
        </SocialList>
        <SocialList href="curriculum">
          <CV class="size-4" />
          Cv
        </SocialList>
      </nav>
    </SectionContainer>

    <!--Section to Experience -->
    <SectionContainer id="experience">
      <h2 class="text-3xl font-semibold mb-4 flex gap-x-3 items-center">
        <ExperienceIcon class="size-7" />Experience
      </h2>
      <Experience />
    </SectionContainer>

    <!--Section to Projects -->
    <SectionContainer id="projects">
      <h2 class="text-3xl font-semibold mb-4 flex items-center gap-x-3">
        <ProjectIcon class="size-7" />Projects
      </h2>

      <Projects />
    </SectionContainer>

    <!--Section to About me-->
    <SectionContainer id="about">
      <h2 class="text-3xl font-semibold mb-4 flex items-center gap-x-3">
        <User class="size-7" />About me
      </h2>

      <Aboutme />
    </SectionContainer>
  </main>
  <Footer />
</Layout>

